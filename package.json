{
  "name": "@webqamdev/sass-boilerplate",
  "version": "0.1.1",
  "description": "An opinionated Sass boilerplate",
  "keywords": [
    "sass",
    "scss",
    "boilerplate"
  ],
  "homepage": "https://github.com/webqamdev/sass-boilerplate",
  "bugs": {
    "url": "https://github.com/webqamdev/sass-boilerplate/issues"
  },
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/webqamdev/sass-boilerplate"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "watch": "npm run build -- --watch --progress",
    "prettier": "prettier \"src/**/*.js\" \"src/**/*.scss\" \"src/**/*.css\" \"src/**/*.json\" \"src/**/*.html\" \"src/**/*.htm\" \"**/*.md\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:fix": "npm run prettier -- --write",
    "stylelint": "stylelint 'src/scss/**/*.scss'",
    "test": "npm run prettier:check && npm run stylelint"
  },
  "author": "Webqam",
  "devDependencies": {
    "breakpoint-sass": "^2.7.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.4.1",
    "fibers": "^4.0.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mini-css-extract-plugin": "^0.9.0",
    "normalize.css": "^8.0.1",
    "prettier": "^1.19.1",
    "sass": "^1.24.2",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.1.2",
    "stylelint": "^12.0.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.2.0",
    "stylelint-no-indistinguishable-colors": "^1.3.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.13.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{scss,css}": [
      "stylelint --fix",
      "git add"
    ],
    "*.{js,scss,css,json,html,htm,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
