{
  "name": "@bgondy/sass-boilerplate",
  "version": "1.0.0",
  "description": "An opinionated Sass boilerplate",
  "keywords": [
    "sass",
    "scss",
    "boilerplate"
  ],
  "homepage": "https://github.com/bgondy/sass-boilerplate",
  "bugs": {
    "url": "https://github.com/bgondy/sass-boilerplate/issues"
  },
  "license": "MIT",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bgondy/sass-boilerplate"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "watch": "npm run build -- --watch --progress",
    "prettier": "prettier \"src/**/*.js\" \"src/**/*.scss\" \"**/*.md\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:fix": "npm run prettier -- --write",
    "stylelint": "stylelint 'src/scss/**/*.scss'",
    "test": "npm run prettier:check && npm run stylelint",
    "prepare": "husky install"
  },
  "author": "Benjamin Gondy",
  "devDependencies": {
    "autoprefixer": "^10.3.7",
    "breakpoint-sass": "^2.7.1",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.4.0",
    "css-minimizer-webpack-plugin": "^3.1.1",
    "fibers": "^5.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.4",
    "mini-css-extract-plugin": "^2.4.3",
    "normalize.css": "^8.0.1",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "sass": "^1.43.3",
    "sass-loader": "^12.2.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.0.0",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-config-recommended-scss": "^5.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.4.0",
    "stylelint-no-indistinguishable-colors": "^1.3.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^4.0.0",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1"
  },
  "lint-staged": {
    "*.{scss,css}": [
      "stylelint --fix"
    ],
    "*.{js,scss,css,json,html,htm,md}": [
      "prettier --write"
    ]
  }
}
